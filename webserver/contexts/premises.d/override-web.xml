<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">


  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Admin access to webapp</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Open access to flash display</web-resource-name>
      <url-pattern>/flashdisplay/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Premises Realm</realm-name>
  </login-config>

  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>

  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <security-role>
    <role-name>user</role-name>
  </security-role>

</web-app>


