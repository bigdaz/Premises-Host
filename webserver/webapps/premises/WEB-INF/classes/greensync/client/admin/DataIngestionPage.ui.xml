<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .list li {
      margin: 1em;
    }
    .list li span {
      color: orange;
      font-size: 90%;
      display: block;
    }

    .console {
      width: 500px;
      height: 200px;
      border: 1px solid black;
    }
  </ui:style>

  <g:HTMLPanel>
    <h3>Click on a button below to test data ingestion</h3>
    <ul class="{style.list}">
      <li>
        Upload a single meter reading using the data ingestion api
        <form action="/ingest" method="POST" target="results">
          <div>Premises ID: <input name="premises" value="12"/></div>
          <div>Meter ID: <input name="meter" value="12_ELECTRICITY"/></div>
          <div>Reading: <input name="reading"/></div>
          <input type="submit"/>
        </form>
      </li>
      <li>
        Upload a CSV file with meter reading data
        <form action="/ingest" method="POST" target="results" enctype="multipart/form-data">
          <div>Choose file: <input type="file" name="datafile"/></div>
          <input type="submit"/>
        </form>
      </li>
    </ul>

    <iframe name="results" width="80%" height="300"/>
  </g:HTMLPanel>
</ui:UiBinder>

