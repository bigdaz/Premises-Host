<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:greensync.client.bm.widget">
  <ui:style>
    @external selected;
    .chartMain > div {
      padding-left: 1em;
    }

    .periodSelect {
      line-height: 2em;
    }

    .periodSelect ul {
      display: inline-block;
      vertical-align: bottom;
    }

    .periodSelect ul li {
      float: left;
      width: 4em;
    }

    .periodSelect ul li a {
      display: block;
      text-align: center;
    }

    .periodSelect a:hover {
      text-decoration: underline;
    }

    .chartContentsAll {
      height: 350px;
      width: 100%;
    }

    .chartBackground {
      background-image: url("images/common/black30pct.png");
    }

    .scaleIndicator div {
      line-height: 30px;
      text-align: center;
      color: #48585E;
      font-size: 80%;
      background-image: url("images/common/black10pct.png");
    }

    .scaleIndicator li {
      line-height: 30px;
      color: #48585E;
      padding-left: 4px;
      font-size: 80%;
      background-image: url("images/common/black10pct.png");
    }

    .scaleIndicator li.selected {
      background-image: url("images/common/black30pct.png");
    }

    .scaleIndicator li img {
      position: relative;
      top: 5px;
    }

    .chartSummary {
      display:inline-block;
      width:100%;
    }

    .chartSummary > div {
      float: left;
      width: 31%;
      text-align: center;
      padding: 1em .2em;
    }

    .chartSummary label {
      display: block;
    }

  </ui:style>
      <widget:ContentPanel icon="images/console/i-target.png">
        <h3 class="header" ui:field="chartTitle"/>
        <div class="{style.chartMain}">
          <div class="{style.periodSelect}">
            <label>View usage for:</label>
            <widget:AnchorList ui:field="timeScaleSelector"/>
            <label><g:Label styleName="label" ui:field="hoverLabel"/></label>
          </div>
          <div>
            <g:LayoutPanel styleName="{style.chartContentsAll}">
              <g:layer top="15" height="200" left="5" width="30">
                <g:HTMLPanel styleName="{style.scaleIndicator}" ui:field="scaleIndicator">
                  <div>Scale</div>
                  <widget:AnchorList ui:field="valueScaleSelector"/>
                </g:HTMLPanel>
              </g:layer>
              <g:layer top="15" bottom="15" left="35" right="10">
                <g:HTML styleName="{style.chartBackground}"/>
              </g:layer>
              <g:layer top="20" bottom="15" left="40" right="10">
                <g:LayoutPanel ui:field="chartContainer"/>
              </g:layer>
            </g:LayoutPanel>
            </div>
        </div>
        <div class="{style.chartSummary}">
          <div>
            <label>Highest</label>
            <span ui:field="periodHigh"/>
          </div>
          <div>
            <label>Lowest</label>
            <span ui:field="periodLow"/>
          </div>
          <div>
            <label>Average</label>
            <span ui:field="periodAverage"/>
          </div>
        </div>
      </widget:ContentPanel>
</ui:UiBinder>
