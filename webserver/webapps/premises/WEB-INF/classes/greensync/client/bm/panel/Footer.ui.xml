<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='theme' type='greensync.client.resource.GreenSyncTheme'/>

  <ui:style>
    .footer {
      background-image: url("images/console/bm-footer-bg.png");
      background-position: bottom right;
      background-repeat: repeat-x;
      padding-left: 1em;
      line-height: 2.5em;
    }

    .productName, .copyrightNotice {
      float:right;
      padding-left: 1em;
      font-size: 90%;
    }

    .supportLinks {
        width: 12 em;
        display: inline-block;
    }

    .supportLinks ul {
    }

    .supportLinks ul li {
      float: left;
      width: 4em;
    }

    .supportLinks ul li a {
      display: block;
      text-align: center;
    }

    .supportLinks ul li a:hover {
      text-decoration: underline;
    }

  </ui:style>

  <g:HTMLPanel styleName="{style.footer}">
    <div class="{style.copyrightNotice} label">Copyright GreenSync Pty Ltd 2010. All Rights Reserved.</div>
    <div class="{style.productName} label">Premises Building Manager v1.0</div>
    <div class="{style.supportLinks}">
      <ul>
        <li>
          <a href="javascript:;">License</a>
        </li>
        <li>
          <a href="javascript:;">Support</a>
        </li>
        <li>
          <a href="javascript:;">Help</a>
        </li>
      </ul>
    </div>
  </g:HTMLPanel>

</ui:UiBinder>