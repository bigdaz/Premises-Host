<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:greensync.client.bm.widget">
  <ui:with field='theme' type='greensync.client.resource.GreenSyncTheme'/>

  <ui:style>
    .locatorBar {
      background-image: url("images/console/bm-locator-bg.png");
      background-position: bottom right;
      background-repeat: repeat-x;
      padding-left: 1em;
      line-height: 3em;
    }
    .locationSelector {
      float: right;
    }
    .locator {
      /* Align the locator with the left-most topNavButton */
      width: 30em;
      display: inline-block;
    }
  </ui:style>

  <g:HTMLPanel styleName="{style.locatorBar} {theme.colours.locatorBar}">
    <div class="{style.locationSelector}">
      <label>Set location:</label> <div class="{style.locator}"><widget:PremisesSelector ui:field="premisesSelector"/></div>
    </div>
    <div>
      <label>You are here:</label> <widget:Breadcrumb ui:field="breadcrumb"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>