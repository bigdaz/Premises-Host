<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='theme' type='greensync.client.resource.GreenSyncTheme'/>
  <ui:style>
    .welcomePanel {
      margin: auto;
      width: 30em;
      padding: 20px;
      margin-top: 20px;
    }
    p.content {
      margin: 10px;
      padding-bottom: 20px;
    }

  </ui:style>
  <g:HTMLPanel styleName="{theme.colours.contentWindow}">
    <div class="{style.welcomePanel}">
      <h3 class="header">GreenSync Building Manager</h3>
      <p class="{style.content}">
          To begin using Building Manager, please select a location.
      </p>
      <p class="{style.content}">
          We'll be putting a bunch more content in here.
      </p>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>