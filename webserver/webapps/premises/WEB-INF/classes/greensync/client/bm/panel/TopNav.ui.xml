<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:greensync.client.bm.widget">
  <ui:with field='theme' type='greensync.client.resource.GreenSyncTheme'/>
  <ui:style>
    .topNavButtons {
    }

    .topNavButtons li {
      float: left;
      width: 6em;
      line-height: 6em;
      border-width: 1px;
    }

    .topNavButtons a {
      display: block;
      text-align: center;
      border-style: solid;
      border-width: 1px;
      padding-top: 1em;
     }
  </ui:style>

  <g:LayoutPanel styleName="{theme.colours.topNav}">
    <g:layer width="30em" right="0em">
      <widget:AnchorList ui:field="topNavButtons" styleName="{style.topNavButtons}"/>
    </g:layer>
    <g:layer top="10px" height="100px" left="15px" width="300px">
      <g:Image resource="{theme.consoleLogo}"/>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>