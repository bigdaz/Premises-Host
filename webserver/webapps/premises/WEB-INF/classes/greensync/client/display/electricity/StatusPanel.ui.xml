<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:greensync.client.display.widget">
  <ui:style>
    .panel {
      padding-top: 20px;
    }

    .energyAlert {
      background-color: #1E2B32;
      border-style: solid;
      font-variant: small-caps;
      text-align: center;
      line-height: 2em;
      margin: 0 2em 0 2em;
    }

    .gauge {
      width: 200px;
      height: 100%;
      margin: auto;
    }
  </ui:style>

  <widget:ContentPanel icon="images/display/i-status.png">
    <h3>Energy Status</h3>
    <div class="{style.panel}">
      <div class="{style.energyAlert}" ui:field="energyAlert"/>
      <g:FlowPanel styleName="{style.gauge}" ui:field="gaugeContainer"/>
    </div>
  </widget:ContentPanel>

</ui:UiBinder>

