<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:water="urn:import:greensync.client.display.water"
             xmlns:widget="urn:import:greensync.client.display.widget">
  <ui:with field='theme' type='greensync.client.resource.GreenSyncTheme'/>

  <ui:style>
    .header {
      background-image: url("images/display/topbar-bg.png");
      background-position: bottom right;
      background-repeat: repeat-x;
    }

    .footer {
    }

    .poweredBy {
      color: white;
      opacity: .5;
    }

    .statusPanel {
      height: 200px;
      padding: 1em;
    }
  </ui:style>

  <!-- Outer layout panel just enforces a 16x9 area -->
  <g:LayoutPanel>
    <g:layer top="0" left="0" width="1024px" height="576px">
      <g:DockLayoutPanel unit="PX" styleName="{theme.colours.waterDisplay}">
        <g:north size="88">
          <g:LayoutPanel styleName="{style.header}">
            <g:layer left="800px" width="200px">
              <widget:Clock ui:field="clock"/>
            </g:layer>
          </g:LayoutPanel>
        </g:north>
        <!-- Footer - will contain "powered by GreenSync" -->
        <g:south size="50">
          <g:LayoutPanel>
            <g:layer left="920px" top="5px" height="40px" width="100px">
              <g:HTML styleName="{style.poweredBy}">Powered by GreenSync</g:HTML>
            </g:layer>
          </g:LayoutPanel>
        </g:south>
        <g:center>
          <g:LayoutPanel>
            <g:layer top="25px" left="25px" height="260px" width="270px">
              <widget:ContentPanel icon="images/display/i-status.png">
                <h3>Water Status</h3>
                <div class="{style.statusPanel}">
                  Need something to put here
                </div>
              </widget:ContentPanel>
            </g:layer>
            <g:layer top="305px" left="25px" height="130px" width="270px">
              <water:StatsBox ui:field="statsBox"/>
            </g:layer>
            <g:layer top="35px" left="360px" height="400px" width="650px">
              <g:LayoutPanel ui:field="chartContainer"/>
            </g:layer>
          </g:LayoutPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:layer>
    <g:layer top="5px" height="100px" left="5px" width="300px">
      <g:Image resource="{theme.displayLogo}"/>
    </g:layer>
  </g:LayoutPanel>


</ui:UiBinder>

