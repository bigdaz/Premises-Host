<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:greensync.client.display.widget">
  <ui:style>
    @external selected;

    .chartPanel {
    }

    .chartHeader {
      color: #C3CF20;
      line-height: 50px;
      font-size: 150%;
      padding-left: 40px;
      background-image: url("images/common/black50pct.png");
    }

    .chartHeader  div {
      padding-left: 20px;
    }

    .chartContents {
      margin-top: 1px;
      background-image: url("images/common/black50pct.png");
    }

    .chartBox {
      background-image: url("images/common/black40pct.png");
      padding: 5px;
    }

    .scaleIndicator {
      background-image: url("images/common/black20pct.png");
    }

    .scaleIndicator div {
      line-height: 30px;
      color: #48585E;
      padding-left: 10px;
    }

    .scaleIndicator li {
      line-height: 30px;
      color: #48585E;
      font-size: 80%;
    }

    .scaleIndicator li.selected {
      color: white;
      font-size: 100%;
      background-image: url("images/common/black20pct.png");
    }

    .scaleIndicator li img {
      position: relative;
      top: 5px;
      padding: 0 5px;
    }
  </ui:style>

  <g:DockLayoutPanel unit="PX" styleName="{style.chartPanel}">
    <g:north size="50">
      <g:Label styleName="{style.chartHeader}" ui:field="chartHeader"/>
    </g:north>
    <g:center>
      <g:LayoutPanel>
        <g:layer><g:HTML styleName="{style.chartContents}"/></g:layer>
        <g:layer top="15" height="200" left="25" width="95">
          <g:HTMLPanel styleName="{style.scaleIndicator}" ui:field="scaleIndicator">
            <div>View Scale</div>
            <ul ui:field="scaleIndicators"/>
          </g:HTMLPanel>
        </g:layer>
        <g:layer top="15" bottom="15" left="120" right="15">
          <g:FlowPanel styleName="{style.chartBox}" ui:field="chartContainer"/>
        </g:layer>
      </g:LayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>

