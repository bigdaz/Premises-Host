<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:greensync.client.display.widget">
  <ui:style>
    .date {
      color: black;
      text-align: center;
      background-image: url("images/display/timedate-date.png");
      background-repeat: no-repeat;
      font-size: 70%;
      padding-top: 3px;
    }

    .date div {
      font: 26px impact;
      color: #C3CF20;
      letter-spacing: 1px;
    }

    .time {
      background-image: url("images/display/timedate-time.png");
      background-repeat: no-repeat;
      font: 26px impact;
      text-align: center;
      padding-top: 13px;
      letter-spacing: 1px;
    }

    .time div {
      color: #C3CF20;
      display: inline;
    }
  </ui:style>

  <g:LayoutPanel>
    <g:layer left="0px" width="61px" top="8px" height="61px">
      <g:HTML styleName="{style.date}" ui:field="date"/>
    </g:layer>
    <g:layer left="80px" width="105px" top="8px" height="61px">
      <g:HTML styleName="{style.time}" ui:field="time"/>
    </g:layer>
  </g:LayoutPanel>

</ui:UiBinder>

